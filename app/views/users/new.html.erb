<%= form_for(@user) do |f| %>
  <%= label_tag(:name, "Name:") %>
  <%= f.text_field :name %>
  <%= label_tag(:email, "Email:") %>
  <%= f.email_field :email %>
  <%= label_tag(:password, "Create Password:") %>
  <%= f.password_field :password %>
  <%= label_tag(:password_confirmation, "Confirm Password:") %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit %>
<% end %>
